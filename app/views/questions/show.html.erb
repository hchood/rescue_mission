<h3>Title: <%= @question.title %></h3>

<div>
  <%= @question.description %>
</div>

<h3>Post an answer:</h3>

<%= form_for [@question, @answer] do |f| %>

  <% if @answer.errors.any? %>
    <ul>
      <% @answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit 'Submit' %>
  </div>
<% end %>
